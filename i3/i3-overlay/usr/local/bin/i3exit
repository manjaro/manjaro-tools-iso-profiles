#!/bin/sh

lock() {
    i3lock
}

case "$1" in
    lock)
        blurlock
        ;;
    logout)
        i3-msg exit
        ;;
    switch_user)
	blurlock && dm-tool switch-to-greeter
	;;
    suspend)
	blurlock && systemctl suspend
        ;;
    hibernate)
	blurlock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|switch_user|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
