
! Custom part
! -----------

! Perl extensions loaded
URxvt.perl-ext-common: clipboard,tabbed

! Scrollbar
URxvt.saveLines: 10000
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.scrollColor: #c2dd5a
URxvt.scrollBar_floating: true
URxvt.scrollstyle: plain

! Colors
URxvt.foreground: [80]#f2f2f2
URxvt.background: [80]#101010
URxvt.color12:    #0071ff

! Fonts
URxvt.font: xft:Monospace:size=11

! True transparency (works only with a compositor enabled)
URxvt.depth: 32


! Color of the tab bar
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 2
URxvt.tabbed.tab-bg: 0


! Classic copy/paste by Shift-Ctrl-c|v
URxvt.iso14755: False
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste
